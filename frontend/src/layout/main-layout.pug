doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title #{pageTitle}
        link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css', rel='stylesheet', integrity='sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN', crossorigin='anonymous')
        script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js', integrity='sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL', crossorigin='anonymous')
        link(href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css', rel='stylesheet')
    body
        .container-fluid
            .row
                // Left Sidebar (2 columns wide)
                nav.col-md-2.bg-dark.text-light(style='align-items: flex-end; height: 100%;')
                    a.text-light.text-decoration-none(href='/')
                        i.fas.fa-home.fa-2x.d-block.my-2
                    a.text-light.text-decoration-none(href='/messages')
                        i.fas.fa-envelope.fa-2x.d-block.my-2
                    a.text-light.text-decoration-none(href='/world')
                        i.fas.fa-globe.fa-2x.d-block.my-2
                    a.text-light.text-decoration-none(href='/profile')
                        i.fas.fa-user.fa-2x.d-block.my-2
                    a.text-light.text-decoration-none(href='/settings')
                        i.fas.fa-cog.fa-2x.d-block.my-2
                    a.text-light.text-decoration-none(href='/logout')
                        i.fas.fa-sign-out-alt.fa-2x.d-block.my-2
                // Main Content (8 columns wide, visible on md and larger screens)
                .col-md-8.bg-light.col-lg-6
                    block content
                // Right Sidebar (2 columns wide, visible on md and larger screens)
                .col-md-6.col-lg-4.bg-dark.text-light.d-none.d-md-block
                    p Right Sidebar (2)
// Bootstrap JS and Popper.js links (required for some Bootstrap features)
